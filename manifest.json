{
  "name": "AI Webpage Assistant",
  "version": "1.0",
  "description": "Chat with AI about any webpage content",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "options_page": "settings.html"
}
